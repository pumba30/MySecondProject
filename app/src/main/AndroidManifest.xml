<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="pandroidsoft.com.mysecondproject"
          android:installLocation="preferExternal"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-sdk
        android:maxSdkVersion="21"
        android:minSdkVersion="17"
        android:targetSdkVersion="17"/>

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--Защита от блокировки экрана-->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <uses-feature
        android:name="android.hardware.touchscreen.multitouch"
        android:required="true"/>
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18"/>


    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <activity
            android:name=".AndroidBasicStarter"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


        <activity
            android:name=".LifeCycleTest"
            android:label="@string/title_activity_life_cycle_test"
            android:configChanges="keyboard|keyboardHidden|orientation">
        </activity>

        <activity
            android:name=".SingleTouchTest"
            android:label="@string/title_SingleTouchTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".MultiTouchTest"
            android:label="@string/title_MultiTouchTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".KeyTest"
            android:label="@string/title_KeyTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".AccelerometerTest"
            android:label="@string/title_AccelerometerTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".AssetsTest"
            android:label="@string/title_AssetsTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".ExternalStorageTest"
            android:label="@string/title_ExternalStorageTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".SoundPoolTest"
            android:label="@string/title_SoundPoolTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".MediaPlayerTest"
            android:label="@string/title_MediaPlayerTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".FullScreenTest"
            android:label="@string/title_FullScreenTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".RenderViewTest"
            android:label="@string/title_RenderViewTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".ShapeTest"
            android:label="@string/title_ShapeTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".BitmapTest"
            android:label="@string/title_ShapeTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".FontTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

        <activity
            android:name=".SurfaceViewTest"
            android:configChanges="keyboard|keyboardHidden">
        </activity>

    </application>

</manifest>
